function getTimes(id, time) {
  var timeR = Math.round(time);
  var minuts = Math.floor(timeR / 60);
  var second = timeR % 60;
  if (Math.abs(minuts) < 10) {
    if (Math.abs(second) < 10)
      $(id).html("0" + minuts + " : " + "0" + timeR % 60);
    else
      $(id).html("0" + minuts + " : " + timeR % 60);
  } else {
    if (Math.abs(second) < 10)
      $(id).html(minuts + " : " + "0" + timeR % 60);
    else
      $(id).html("0" + minuts + " : " + timeR % 60);
  }
}



